<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--customize your theme here.-->
        <item name="colorPrimary">@color/azul</item>
        <item name="colorPrimaryDark">@color/azul</item>
        <item name="android:statusBarColor">@color/azul</item>
        <item name="colorAccent">@color/negro</item>
    </style>
    <style name="EstiloBotonNumero" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/negro</item>
        <item name="android:backgroundTint">@color/fondoBtnNum</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="EstiloBotonOperador" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/negro</item>
        <item name="android:backgroundTint">@color/fondoBtnOp</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="EstiloBotonIgual" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/negro</item>
        <item name="android:backgroundTint">@color/fondoIgual</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="EstiloBotonClear" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/blanco</item>
        <item name="android:backgroundTint">@color/negro</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Estilotexto" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/blanco</item>
        <item name="android:backgroundTint">@color/negro</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="EstiloResultado" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/negro</item>
        <item name="android:background">#D4F0EB</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="EstiloBotonShow" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/negro</item>
        <item name="android:backgroundTint">@color/fondoBtnShow</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="EstiloBotonSave" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/azul</item>
    </style>
</resources>